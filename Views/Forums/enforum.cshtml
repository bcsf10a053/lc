        <div class="scroll">
            <h3 class="m">?(Questions)</h3>
          
            @foreach( var v in Model ){
                  
            <div class="r" onclick="fn('@v.tid')">
                

             <strong class="m">@v.title     @v.time</strong>
              <p id="chek" >@v.ques</p>
                    
                </div>
                    
                   
                
                
                              
                
