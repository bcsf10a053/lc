    <script type="text/javascript">
        function fc() {
            $.ajax({
                type: 'POST', url: '/Forums/ans', data: $('#ContactForm').serialize(),
                success: function (x) {
                    $('#da').append('<fieldset><tr><td><h3>  Answer() </h3> </td><td>' + x + '</td></tr></fieldset>');
                },
                error: function () {
                    alert('Wrong attempt,"Answer without a question"');
                }
            });

            return false;
        }
     
        
        function fn(d) {
           
             
               
               
                var countryId = parseInt(d);
           
                
                
                
                
                $("#da fieldset").remove();

                $.getJSON("/Forums/Get?id=" + countryId, function (data) {
                    
                    $.each(data, function (i, item) {
                        if (i == 0) {
                            $("#da").append('<fieldset><legend class="m">  Question: </legend><p>' + item.ques + '</p><strong>By ' + item.name + '</strong><p class="t">' + item.time + '</p></fieldset>');

                            
                            
                        }
                        else {
                            $("#da").append('<fieldset><tr><td><legend>  Answer(' + i + ') </legend> <p>' + item.title + '</p><strong>By ' + item.name + '</strong><p class="t">' + item.timea + '</p></fieldset>');
                        }

                       
                    });

                });
                }

            
         
        function fg(v) {
           
            var g = parseInt(v);



            $.getJSON("/Forums/Get?id=" + g, function (data) {

                $("#da").append(data.ques);
                alert(data.ques);


            });

        }
        function setbg(color) {
            document.getElementById("styled").style.background = color
        }

        
</script>
  
<div class="body1">
